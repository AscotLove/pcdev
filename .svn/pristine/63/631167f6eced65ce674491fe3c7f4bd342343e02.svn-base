html,
body {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
#wrap {
  width: 100%;
  height: 100%;
}
header {
  width: 100%;
  height: 80px;
  z-index: 2;
}
.header_container {
  position: relative;
  margin: 0 auto;
  max-width: 1100px;
  display: flex;
  justify-content: space-between;
}
.header_container .header_logo {
  margin-top: 15px;
}
.header_container .header_nav {
  display: flex;
  margin-top: 50px;
}
.header_container .header_nav li {
  margin-left: 40px;
  position: relative;
  cursor: pointer;
}
.header_container .header_nav li:hover .header_navdown {
  width: 100%;
}
.header_container .header_nav .header_navup {
  color: #009EE0;
}
.header_container .header_nav .header_navdown {
  width: 0;
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 0;
  transition: width 1s;
}
.header_container .header-arrow {
  width: 21px;
  height: 21px;
  background: #fff;
  position: absolute;
  bottom: -9px;
  left: 0;
  transform: rotate(45deg);
  transition: left 1s;
  border-radius: 100% 0 0 0;
  z-index: 99;
}
.content {
  height: calc(100% - 80px);
  min-height: 540px;
  overflow: hidden;
}
.content .content-nav {
  height: 500%;
  transition: transform 1s;
}
.content .content-nav > li {
  height: 20%;
  position: relative;
}
.content .content-nav > li:nth-child(1) {
  background-image: url("../imgs/bg1.jpg");
}
.content .content-nav > li:nth-child(2) {
  background-image: url("../imgs/bg2.jpg");
}
.content .content-nav > li:nth-child(3) {
  background-image: url("../imgs/bg3.jpg");
}
.content .content-nav > li:nth-child(4) {
  background-image: url("../imgs/bg4.jpg");
}
.content .content-nav > li:nth-child(5) {
  background-image: url("../imgs/bg5.jpg");
}
.content .content-nav > li > div {
  width: 1100px;
  height: 520px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
@keyframes left-hide {
  
}
.content-nav-home .content-home-carousel {
  position: relative;
  height: 100%;
}
.content-nav-home .content-home-carousel > li {
  width: 100%;
  height: 520px;
  position: absolute;
}
.content-nav-home .content-home-carousel:nth-child(1) {
  background-color: #dc6c5f;
}
.content-nav-home .content-home-carousel:nth-child(2) {
  background-color: #95dc84;
}
.content-nav-home .content-home-carousel:nth-child(3) {
  background-color: #64b9d2;
}
.content-nav-home .content-home-carousel:nth-child(4) {
  background-color: #000;
}
.content-nav-home .content-home-point {
  display: flex;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}
.content-nav-home .content-home-point > li {
  width: 20px;
  height: 20px;
  background-color: rgba(255, 255, 255, 0.5);
  margin: 2px;
  box-shadow: 0 0 4px rgba(25, 25, 25, 0.8);
  border-radius: 50%;
}
.commul-font {
  width: 400px;
  color: #009ee0;
  font-size: 80px;
  line-height: 0.8;
  font-weight: bold;
  letter-spacing: -5px;
  margin: 50px 0 100px 50px;
}
.content-nav .content-nav-img {
  display: flex;
}
.content-nav-About {
  position: relative;
}
.content-nav-About .commonText {
  color: white;
  line-height: 1.5;
  font-size: 15px;
  width: 400px;
  padding-left: 50px;
}
.content-nav-About > ul {
  width: 260px;
  height: 200px;
  border: 5px solid rgba(255, 255, 255, 0.5);
  border-radius: 8px;
  position: absolute;
  top: 50px;
  left: 750px;
  box-sizing: content-box;
}
.content-nav-About > ul li {
  width: 130px;
  height: 100px;
  float: left;
}
.content-nav-About .content-About-img1 {
  top: 50px;
  left: 750px;
  background: url('../imgs/about1.jpg') no-repeat;
}
.content-nav-About .content-About-img2 {
  top: 290px;
  left: 600px;
  background: url('../imgs/about3.jpg') no-repeat;
}
