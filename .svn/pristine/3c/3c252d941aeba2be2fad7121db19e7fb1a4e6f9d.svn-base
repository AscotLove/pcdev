html,
body {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
#wrap {
  width: 100%;
  height: 100%;
}
header {
  width: 100%;
  height: 80px;
}
.header_container {
  position: relative;
  margin: 0 auto;
  max-width: 1100px;
  display: flex;
  justify-content: space-between;
}
.header_container .header_logo {
  margin-top: 15px;
}
.header_container .header_nav {
  display: flex;
  margin-top: 50px;
}
.header_container .header_nav li {
  margin-left: 40px;
  position: relative;
  cursor: pointer;
}
.header_container .header_nav .header_navup {
  color: #009EE0;
}
.header_container .header_nav .header_navdown {
  position: absolute;
  top: 0;
  left: 0;
}
.header_container .header-arrow {
  width: 21px;
  height: 21px;
  background: #ff0e73;
  position: absolute;
  bottom: -11px;
  left: 0;
  transform: rotate(45deg);
  transition: left 1s;
}
.content {
  height: 20%;
}
.content li {
  height: 100%;
}
.content li:nth-child(1) {
  background-image: url("../imgs/bg1.jpg");
}
.content li:nth-child(2) {
  background-image: url("../imgs/bg2.jpg");
}
.content li:nth-child(3) {
  background-image: url("../imgs/bg3.jpg");
}
.content li:nth-child(4) {
  background-image: url("../imgs/bg4.jpg");
}
.content li:nth-child(5) {
  background-image: url("../imgs/bg5.jpg");
}
