html,
body {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
#wrap {
  width: 100%;
  height: 100%;
}
header {
  width: 100%;
  height: 80px;
  z-index: 2;
}
.header_container {
  position: relative;
  margin: 0 auto;
  max-width: 1100px;
  display: flex;
  justify-content: space-between;
}
.header_container .header_logo {
  margin-top: 15px;
}
.header_container .header_nav {
  display: flex;
  margin-top: 50px;
}
.header_container .header_nav li {
  margin-left: 40px;
  position: relative;
  cursor: pointer;
}
.header_container .header_nav li:hover .header_navdown {
  width: 100%;
}
.header_container .header_nav .header_navup {
  color: #009EE0;
}
.header_container .header_nav .header_navdown {
  width: 0;
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 0;
  transition: width 1s;
}
.header_container .header-arrow {
  width: 21px;
  height: 21px;
  background: #fff;
  position: absolute;
  bottom: -9px;
  left: 0;
  transform: rotate(45deg);
  transition: left 1s;
  border-radius: 100% 0 0 0;
  z-index: 99;
}
.content {
  height: calc(100% - 80px);
  min-height: 540px;
  overflow: hidden;
}
.content .content-nav {
  height: 500%;
  transition: transform 1s;
}
.content .content-nav li {
  height: 20%;
  position: relative;
}
.content .content-nav li:nth-child(1) {
  background-image: url("../imgs/bg1.jpg");
}
.content .content-nav li:nth-child(2) {
  background-image: url("../imgs/bg2.jpg");
}
.content .content-nav li:nth-child(3) {
  background-image: url("../imgs/bg3.jpg");
}
.content .content-nav li:nth-child(4) {
  background-image: url("../imgs/bg4.jpg");
}
.content .content-nav li:nth-child(5) {
  background-image: url("../imgs/bg5.jpg");
}
.content .content-nav li > div {
  width: 1100px;
  height: 520px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #009EE0;
}
